# ANA Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Settings
# =============================================================================
# Options: openai, anthropic, ollama, vllm
ANA_LLM_PROVIDER=openai

# OpenAI Settings
OPENAI_API_KEY=sk-your-api-key-here
ANA_LLM_MODEL=gpt-4o

# Anthropic Settings (if using anthropic)
# ANTHROPIC_API_KEY=sk-ant-your-api-key-here
# ANA_LLM_MODEL=claude-3-5-sonnet-20241022

# Ollama Settings (if using ollama)
# ANA_OLLAMA_BASE_URL=http://localhost:11434
# ANA_OLLAMA_MODEL=llama3.1:8b

# vLLM Settings (if using vllm)
# ANA_VLLM_BASE_URL=http://localhost:8000/v1
# ANA_VLLM_MODEL=meta-llama/Llama-3.1-8B-Instruct

# =============================================================================
# LLM Parameters
# =============================================================================
ANA_LLM_TEMPERATURE=0.7

# =============================================================================
# Obsidian Vault Settings
# =============================================================================
# Path to your Obsidian vault (absolute path recommended)
ANA_VAULT_PATH=~/vault

# =============================================================================
# Agent Settings
# =============================================================================
# Maximum number of questions per round
ANA_MAX_QUESTIONS=5

# Maximum number of question rounds
ANA_MAX_ITERATIONS=3

# =============================================================================
# Template Settings
# =============================================================================
# Directory for file-based templates
ANA_TEMPLATES_DIR=templates

# Path for template database (JSON)
ANA_TEMPLATE_DB_PATH=data/templates.json

# =============================================================================
# Language Settings
# =============================================================================
# Output language (ko, en, ja, zh)
ANA_OUTPUT_LANGUAGE=ko

# =============================================================================
# Embedding Settings
# =============================================================================
# Embedding provider (ollama, openai, huggingface)
ANA_EMBEDDING_PROVIDER=ollama

# Embedding model name
ANA_EMBEDDING_MODEL=nomic-embed-text

# Enable embeddings for note linking
ANA_EMBEDDING_ENABLED=true

# =============================================================================
# Note Linking Settings
# =============================================================================
# Enable automatic note linking
ANA_ENABLE_NOTE_LINKING=true

# Maximum number of related note links
ANA_MAX_RELATED_LINKS=5

# Rerank model for note linking
ANA_RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Enable reranking
ANA_RERANK_ENABLED=true

# =============================================================================
# Embedding Cache Settings
# =============================================================================
# Batch size for embedding processing (1-100)
ANA_EMBEDDING_BATCH_SIZE=10

# Enable Chroma vector DB backend (requires chromadb)
# Note: JSON cache is always saved regardless of this setting
ANA_USE_VECTOR_DB=false

# =============================================================================
# Custom Prompt Settings
# =============================================================================
# Directory containing custom prompt files (optional)
# When set, ANA will look for: system.txt, analysis.txt, interrogation.txt, 
# synthesis.txt, tag_suggestion.txt in this directory
# ANA_CUSTOM_PROMPTS_DIR=prompts

# Individual prompt file paths (optional, overrides directory setting)
# Use these for fine-grained control over each prompt
# ANA_CUSTOM_SYSTEM_PROMPT=prompts/system.txt
# ANA_CUSTOM_ANALYSIS_PROMPT=prompts/analysis.txt
# ANA_CUSTOM_INTERROGATION_PROMPT=prompts/interrogation.txt
# ANA_CUSTOM_SYNTHESIS_PROMPT=prompts/synthesis.txt
# ANA_CUSTOM_TAG_SUGGESTION_PROMPT=prompts/tag_suggestion.txt
